%div{"ng-controller" => "leagueController", "model"=>"#{@league.id}"}

  %flash:messages


  %h1{"ng-bind"=>"league.name"}

  = render 'shared/table'


  %div{"ng-repeat"=>"round in league.rounds"}
    %h3{"ng-bind"=>"round.number + ' Round'"}
    %h5{"ng-bind"=>"round.start_date | date:'yyyy-MM-dd'"}
    %h5{"ng-bind"=>"round.end_date | date:'yyyy-MM-dd'"}
    .matchesRound{"ng-repeat"=>"match in round.matches"}
      %h5{"ng-bind"=>"match.date | date:'yyyy-MM-dd'"}
      %table.playersMatch
        %tr
          %th{"ng-bind"=>"match.player_1.name"}
          %th{"ng-bind"=>"match.player_1_frames"}
          %th{"ng-bind"=>"' : '"}
          %th{"ng-bind"=>"match.player_2_frames"}
          %th{"ng-bind"=>"match.player_2.name"}
        %tr{"ng-repeat"=>"frame in match.frames"}
          %td
            %div{"ng-repeat"=>"break in frame.breaks_1 "}
              %span{"ng-bind"=>"break.points"}
          %td
            %div{"ng-bind"=>"frame.player_1_points"}
          %td{"ng-bind"=>"' : '"}
          %td
            %div{"ng-bind"=>"frame.player_2_points"}
          %td
            %div{"ng-repeat"=>"break in frame.breaks_2"}
              %div{"ng-bind"=>"break.points"}


  = link_to 'Back', players_path
